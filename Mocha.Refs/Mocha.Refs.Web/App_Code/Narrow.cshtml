@helper TitleForm(string submitFuncCall, string titleSearchModel) 
{
    <form class="form-inline" ng-submit="@(submitFuncCall)">
        <div class="form-group">
            <input class="form-control input-sm" type="search" name="titleSearch"
                   ng-model="@(titleSearchModel)" placeholder="タイトルで絞り込み" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-default btn-sm" title="検索"><span class="glyphicon glyphicon-search"></span></button>
        </div>
    </form>
}
