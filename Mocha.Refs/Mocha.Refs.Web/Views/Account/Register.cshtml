@model Mocha.Refs.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "登録";
}

<h1 class="page-header">@ViewBag.Title</h1>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>新しいアカウントを作成します。</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            <span class="help-block">ログイン時に指定する名前です。他の人がすでに使っているユーザー名は使えません。</span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            <span class="help-block">ログイン時に入力するパスワードです。</span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            <span class="help-block">メールアドレスです。</span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DisplayName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
            <span class="help-block">
                画面に表示される名前です。他の人と同じ表示名でも使えます。指定しなかった場合はユーザー名が使われます。
            </span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="登録" />
        </div>
    </div>
}

@section styles {
    <style type="text/css">
        input {
            max-width: 280px;
        }
    </style>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
